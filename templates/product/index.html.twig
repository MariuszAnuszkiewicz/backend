{% extends 'base.html.twig' %}
{% block title %}Products{% endblock %}
{% block body %}
<div class="container">
    {{ include('./messages/success.html.twig') }}
    {{ include('./messages/errors.html.twig') }}
    <div class="row justify-content-center">
        <div class="col-3">
            {{ include('./product/forms/product.html.twig') }}
        </div>
        {% if products is not empty %}
        <div class="card-body"><h5><strong class="header-text">List of Products</strong></h5></div>
        <table class="table table-striped">
            <thead class="bg-dark">
                <tr>
                    <th class="text-center text-white">id</th>
                    <th class="text-center text-white">Name</th>
                    <th class="text-center text-white">Info</th>
                    <th class="text-center text-white">Public Date</th>
                    <th class="text-center text-white">Price</th>
                    <th class="text-center text-white">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td class="text-center"><p class="pt-3 fw-bolder">{{ product.id }}</p></td>
                    <td class="text-center"><p class="pt-3">{{ product.name|length > 30 ? product.name|slice(0, 30) ~ ' ... ' : product.name }}</p></td>
                    <td class="text-center"><p class="pt-3">{{ product.info|length > 50 ? product.info|slice(0, 50) ~ ' ... ' : product.info }}</p></td>
                    <td class="text-center"><p class="pt-3">{{ product.getPublicDate|format_datetime('short', 'none') }}</p></td>
                    <td class="text-center"><p class="pt-3 text-danger fw-bolder">{{ product.price|number_format(2) ~ ' z≈Ç' }}</p></td>
                    <td class="text-center">
                        <div class="col-4 d-inline-flex pt-2">
                            <form method="GET" action="{{ path('product-show', {'id': product.id}) }}">
                                <button class="btn btn-info"><i class="fas fa-eye"></i></button>
                            </form>
                        </div>
                        <div class="col-4 d-inline-flex pt-2">
                            <form method="POST" action="{{ path('product-edit', {'id': product.id}) }}">
                                <button class="btn btn-success"><i class="fas fa-edit"></i></button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
</div>
    <style>

        .style-info {
            display: block;
            position: absolute;
            top: 310px;
            left: 41.7%;
            background-color: rgba(60, 204, 102, 0.3);
            width: 350px;
            height: 35px;
            text-align: center;
            border-radius: 7px;
        }

        .style-info p {
            position: relative;
            padding-top: 5px;
            padding-right: 10px;
        }

        .style-warning {
            display: block;
            position: absolute;
            top: 315px;
            left: 41.7%;
            background-color: rgba(245, 34, 70, 0.3);
            width: 350px;
            height: 35px;
            text-align: center;
            border-radius: 7px;
            list-style-type: none;
        }

        .style-warning li {
            position: relative;
            padding-top: 5px;
            padding-right: 25px;
        }
    </style>
{% endblock %}

